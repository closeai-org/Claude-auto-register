# Claude 自动注册工具配置模板
# 请重命名此文件为 .env 并填写相应的值

# 基本设置
# 指定最大轮询次数
lunxun = 10
# 获取的标题关键字
claude_title_key = "log in to Claude.ai"

# 邮箱设置
# 提供接收验证邮件的邮箱
mail_address = "your-email@example.com"
# 邮箱的IMAP密码（通常是应用专用密码，不是登录密码）
mail_password = "your-email-app-password"
# IMAP服务器
IMAP4_SSL = "imap.example.com"
# 邮件超时时间（秒）
mail_timeout = 2

# Cloudflare 设置
# 自定义域名后缀
rules_domain = "your-domain.com"
# Cloudflare区域ID
zone_identifier = "your-zone-id"
# Cloudflare API密钥
cloudflare_API_Key = "your-cloudflare-api-key"
# Cloudflare账户邮箱
X_Auth_Email = "your-cloudflare-email@example.com"
# 目标邮箱地址（通常与mail_address相同）
targetMail = "your-email@example.com"

# 浏览器设置
# 浏览器窗口位置 X坐标
browser_x = 0
# 浏览器窗口位置 Y坐标
browser_y = 0 